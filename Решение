строка [] FindLessThan ( строка [] ввод , int  n ) {
    строка [] вывод  =  новая  строка [ CountLessThan ( input , n )];

    for ( int  i  =  0 , j  =  0 ; i  <  input . Length ; i ++ ) {
        если ( введите [ i ]. Длина  <=  n ) {
            вывод [ j ] =  ввод [ i ];
            я ++ ;
        }
    }

    возвратный  вывод ;
}

int  CountLessThan ( строка [] input , int  n ) {
    число  счетчиков  =  0 ;

    for ( int  i  =  0 ; i  <  input . Length ; i ++ ) {
        если ( введите [ i ]. Длина  <=  n ) {
            считать ++ ;
        }
    }

     количество возвратов ;
}

строка [] AskArray () {
    Write ( " Введите через пробел значения: " );
    вернуть  ReadLine (). Разделить ( "  " );
